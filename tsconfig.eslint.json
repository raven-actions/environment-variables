{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "allowJs": true,
    "noEmit": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "__fixtures__",
    "__tests__",
    "fixtures",
    "tests",
    "src",
    "eslint.config.mjs",
    "jest.config.mjs",
    "rollup.config.mjs"
  ]
}
