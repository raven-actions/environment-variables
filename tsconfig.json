{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "./dist",
    "noEmit": true,
    "isolatedModules": true,
    "types": [
      "jest",
    ]
  },
  "exclude": [
    "__fixtures__",
    "__tests__",
    "fixtures",
    "tests",
    "coverage",
    "dist",
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
